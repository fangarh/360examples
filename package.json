{
  "$schema": "node_modules/albatros/schema.json",
  "name": "ru.topomatic.example_1",
  "displayName": "Демонстрационные приложение Topomatic 360",
  "description": "Демонстрационные приложения для разработки на платформе albatros, взаимодействие с элементами модели",
  "private": true,
  "version": "1.0.0",
  "main": "src/main.ts",
  "author": {
    "name": "ООО НПФ \"Топоматик\"",
    "email": "support@topomatic.ru",
    "url": "https://topomatic.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mzaitsev-code/albatros-example.git"
  },
  "icon": "favicon",
  "apx": false,
  "scripts": {
    "serve": "albatros-cli serve",
    "build": "albatros-cli build"
  },
  "devDependencies": {
    "albatros": "*"
  },
  "albatros": {
    "actions": {
      "example1": {
        "label": "Координаты точки",
        "cmd": "example_select_point",
        "description": "Взаимодействие с элементами модели, получение координат точки "
      },
      "example2": {
        "label": "Выбрать объект",
        "cmd": "example_select_element",
        "description": "Взаимодействие с элементами модели, выбор объекта "
      },
      "example3": {
        "label": "Выбрать нескольки объектов",
        "cmd": "example_multiselect_element",
        "description": "Взаимодействие с элементами модели, выбор объекта "
      }
    },
    "menu": [
      {
        "label": "Примеры",
        "submenu": [
          {
            "action": "example1"            
          }, {
            "label": "Выбор объектов",
            "submenu": [
              {
                  "action": "example2"
              }
            ]
          }
        ]
      }
    ]
  }
}
